---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const recentPosts = (await getCollection('blog'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 5);
---

<!doctype html>
<html lang='en'>
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main>
      <h1>Hi, I'm Ed Ezekiel ðŸ‘‹</h1>
      <p>
        I'm a software engineer and former attorney. Welcome to my web
        development digital garden.
      </p>
      <h3>Recent Posts</h3>
      <ul>
        {
          recentPosts.map((post) => (
            <li>
              <a href={`/blog/${post.slug}/`}>
                {post.data.title}
              </a>, <FormattedDate date={post.data.pubDate} />
            </li>
          ))
        }
      </ul>
      <h3>Speaking</h3>
      <ul>
        <li>
          <a href='https://www.meetup.com/angularcommunity/events/298226033/' target="_blank"
            >Angular Community Meetup</a
          >, January 23rd, 2024
        </li>
      </ul>
    </main>
    <Footer />
  </body>
</html>
